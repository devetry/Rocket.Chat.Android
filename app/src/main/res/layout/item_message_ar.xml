<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_container_ar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/screen_edge_left_and_right_padding"
    android:layoutDirection="ltr"
    android:paddingTop="@dimen/message_item_top_and_bottom_padding"
    android:paddingEnd="@dimen/screen_edge_left_and_right_padding"
    android:paddingBottom="@dimen/message_item_top_and_bottom_padding">

    <LinearLayout
        android:id="@+id/day_marker_layout_ar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_messages_notif_ar">

        <View
            android:layout_width="0px"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/day_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@style/Message.DayMarker"
            tools:text="Wednesday" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorDivider" />
    </LinearLayout>

    <include
        android:id="@+id/layout_avatar_ar"
        layout="@layout/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_sender_ar"/>

    <LinearLayout
        android:id="@+id/new_messages_notif_ar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@color/colorRed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_unread_messages"
            android:textColor="@color/colorRed" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@color/colorRed" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_sender_ar"
        style="@style/Sender.Name.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/layout_avatar_ar"
        app:layout_constraintTop_toBottomOf="@+id/day_marker_layout_ar"
        app:layout_constraintRight_toLeftOf="@+id/layout_avatar_ar"
        tools:text="Ronald Perkins" />

    <!--ISSUE: TIMESTAMP not fount-->
    <!--<TextView-->
        <!--android:id="@+id/text_message_time_ar"-->
        <!--style="@style/Timestamp.TextView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--app:layout_constraintBaseline_toBaselineOf="@+id/text_sender_ar"-->
        <!--app:layout_constraintEnd_toStartOf="@+id/text_edit_indicator_ar"-->
        <!--tools:text="11:45 PM" />-->

    <!--TEMP REPLACEMENT-->
    <TextView
        android:id="@+id/text_message_time_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_sender_ar"
        app:layout_constraintEnd_toStartOf="@+id/text_edit_indicator_ar"
        tools:text="11:45 PM" />
    <!--END-->

    <TextView
        android:id="@+id/text_edit_indicator_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/msg_edited"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_sender_ar"
        app:layout_constraintEnd_toStartOf="@+id/text_sender_ar"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/image_star_indicator_ar"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/text_sender_ar"
        app:layout_constraintEnd_toStartOf="@+id/text_message_time_ar"
        app:layout_constraintTop_toTopOf="@+id/text_sender_ar"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/ic_action_message_star_24dp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/read_receipt_view_ar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/text_sender_ar"
        app:layout_constraintEnd_toStartOf="@+id/image_star_indicator_ar"
        app:layout_constraintTop_toTopOf="@+id/text_sender_ar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_check_unread_24dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_content_ar"
        style="@style/Message.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toEndOf="@+id/text_sender_ar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sender_ar"
        tools:text="This is a multiline chat message from Bertie that will take more than just one line of text. I have sure that everything is amazing!" />

    <include
        layout="@layout/layout_reactions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/text_content_ar"
        app:layout_constraintStart_toStartOf="@+id/text_content_ar"
        app:layout_constraintTop_toBottomOf="@+id/text_content_ar" />

</androidx.constraintlayout.widget.ConstraintLayout>
